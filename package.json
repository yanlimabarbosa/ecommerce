{
  "name": "@ecommerce/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "npx nx run-many --target=serve --all",
    "auth-docs": "node apps/auth-service/src/swagger.js",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "docker:start": "docker compose up -d keyfile-seed && timeout /t 3 /nobreak > nul && docker compose up -d mongodb redis && timeout /t 10 /nobreak > nul && docker compose up -d mongo-setup",
    "docker:stop": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:reset": "docker compose down -v && docker compose up -d keyfile-seed && timeout /t 3 /nobreak > nul && docker compose up -d mongodb redis && timeout /t 10 /nobreak > nul && docker compose up -d mongo-setup && npx prisma db push",
    "setup": "npm install && npm run docker:start && npx prisma db push"
  },
  "private": true,
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "axios": "^1.6.0",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-http-proxy": "^2.1.2",
    "ioredis": "^5.8.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.6",
    "prisma": "^6.16.2",
    "swagger-autogen": "^2.23.7",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@nx/docker": "21.5.3",
    "@nx/esbuild": "21.5.3",
    "@nx/express": "^21.5.3",
    "@nx/jest": "21.5.3",
    "@nx/js": "21.5.3",
    "@nx/node": "21.5.3",
    "@nx/web": "21.5.3",
    "@nx/webpack": "21.5.3",
    "@nx/workspace": "21.5.3",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.7",
    "@svgr/webpack": "^8.0.1",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@swc/jest": "~0.2.38",
    "@types/cookie-parser": "^1.4.9",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "20.19.9",
    "@types/nodemailer": "^7.0.2",
    "esbuild": "^0.19.2",
    "jest": "^30.0.2",
    "jest-environment-node": "^30.0.2",
    "jest-util": "^30.0.2",
    "nx": "21.5.3",
    "react-refresh": "^0.10.0",
    "ts-jest": "^29.4.0",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "typescript": "~5.9.2",
    "webpack-cli": "^5.1.4"
  },
  "workspaces": [
    "apps/*"
  ]
}
