# MongoDB Configuration (Docker + Prisma)
# Root/admin creds used by the container and init job
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=admin123

# Application database and credentials (used by your app/Prisma)
MONGO_DB_NAME=development
MONGO_APP_USER=appuser
MONGO_APP_PASSWORD=appsecret
MONGO_REPLICA_SET_NAME=rs0

# Host/ports
MONGO_HOST=localhost
MONGO_PORT=27017
MONGODB_PORT=27017

# For env-validator mapping
MONGO_USERNAME=appuser
MONGO_PASSWORD=appsecret
MONGO_DATABASE=development

# Prisma connection string (use app user, include replicaSet)
DATABASE_URL="mongodb://appuser:appsecret@localhost:27017/development?authSource=development&replicaSet=rs0"

# Redis Configuration
REDIS_HOST="127.0.0.1"
REDIS_PORT="6379"
REDIS_PASSWORD="change-me-generate-random-password-min-32-chars"

# SMTP Configuration (Gmail example - use your own credentials)
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-gmail-app-password"
SMTP_PORT="465"
SMTP_SERVICE="gmail"
SMTP_HOST="smtp.gmail.com"

# JWT Secrets (generate random secure strings)
ACCESS_TOKEN_SECRET="change-me-generate-random-secret-min-32-chars"
REFRESH_TOKEN_SECRET="change-me-generate-random-secret-min-32-chars"

